<h1>Showing This Performance</h1>

<h2><%= @performance.performer %></h2>
<p>Division: <%= @performance.division %></p>
<p>Round: <%= @performance.round %></p>
<p>Date: <%= @performance.date %></p>
<p>Pieces: <%= @performance.piece %></p>
<p>Video: <%= @performance.video %></p>

<% if @performance.user_id == current_user.id %>
    <%= link_to 'Edit the information', edit_performance_path %><br>
    <%= link_to 'Delete this performance', performance_path, method: :delete %><br><br>
<% else %>
    <%= link_to 'back', performances_path %><br><br>
<% end %>



<%= form_with(model: [@performance, @comment]) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :performance_id, value: @performance.id %>
    <%= f.text_area :content %>
    <%= f.submit :comment %>
<% end %>

Comments: 
<ul>
    <%= render @comments %>
</ul>


